{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Copy slack post",
  "description": "Copy slack post in html",
  "permissions": [
    "tabs",
    "https://*.slack.com/files/*"
  ],
  "icons": {
    "16": "icons/icon_16x16.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png"
  },
  "page_action": {
    "default_icon": "icons/icon_32x32.png",
    "default_title": "Copy slack post"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
